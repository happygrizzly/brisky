{% set baseurl = global.request.basepath %}

<!DOCTYPE HTML>
<html>
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=Edge" />
        {# <base href="{{ baseurl }}"> #}
        <title>Brisky QMS | {% block title %}{% endblock %}</title>

        {% block head %}

            {# css is split so it is easier to manage components. gonna glue them together #}

            <link href="{{ baseurl }}/assets/styles/fonts.css" rel="stylesheet" type="text/css" />
            <link href="{{ baseurl }}/assets/styles/defaults.css" rel="stylesheet" type="text/css" />
            <link href="{{ baseurl }}/assets/styles/icons.css" rel="stylesheet" type="text/css" />
            <link href="{{ baseurl }}/assets/styles/buttons.css" rel="stylesheet" type="text/css" />
            <link href="{{ baseurl }}/assets/styles/sidebar.css" rel="stylesheet" type="text/css" />
            <link href="{{ baseurl }}/assets/styles/main.css" rel="stylesheet" type="text/css" />
            <link href="{{ baseurl }}/assets/styles/media-queries.css" rel="stylesheet" type="text/css" />

        {% endblock %}

    </head>
    <body {% block ngApp %}{% endblock %}>

        <div id="sidebar">

            {% block logo %}

                <div class="logo clearfix">
                    <div class="logo-text pull-left"><a href="{{ baseurl }}">Brisky</a></div>
                    <div class="account pull-right">
                        <span class="icon icon-user-male username">{{ global.user.username }}</span>
                        <a href="{{ path('logout') }}" class="logout-link"><span class="icon icon-logout-1"></span></a>
                    </div>
                </div>

            {% endblock %}

            {% block nav %}

                {# list of available applications #}
                
                <div id="nav-apps" class="nav">
                    <ul class="depth-1">
                        <li><a href="/carlos/documents" class="label"><span class="icon icon-flow-tree"></span>Documents Catalog</a></li>
                        <li><a href="/carlos/" class="label"><span class="icon icon-database-1">Knowledge Base</a></li>
                    </ul>
                </div>

            {% endblock %}

        </div>

        <div id="body">

            {% block body %} 
                
            {% endblock %}

        </div>

        {% block scripts %}

            <script src="{{ baseurl }}/assets/js/lib/string-extensions.js" type="text/javascript"></script>
            <script src="{{ baseurl }}/assets/js/lib/ng/angular.js" type="text/javascript"></script>

        {% endblock %}

    </body>
</html>